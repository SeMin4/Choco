<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/warningback"
    tools:context=".WarningPage">



    <ImageButton
        android:id="@+id/shelfindbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:paddingBottom="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/warn_findbutton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42dp" />

    <ImageButton
        android:id="@+id/homegobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:paddingBottom="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/warn_homebutton"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="47dp" />

    <ImageButton
        android:id="@+id/lightbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:maxHeight="75dp"
        android:maxWidth="75dp"
        android:paddingBottom="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/warn_lightbutton" />



    <TextView
        android:id="@+id/textView_warning"
        android:layout_width="294dp"
        android:layout_height="500dp"
        android:layout_marginBottom="130dp"
        android:layout_marginEnd="61dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="31dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="360dp"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/gif_image"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp" />


</RelativeLayout>